{
  "WebhookListener": {
    "Connection": "tp-valkey:6379,abortConnect=false,connectRetry=5,connectTimeout=5000,keepAlive=30",
    "KeyPrefix":  "pcc",
    "Enabled": false,
    "WindowMs": 30000,
    "TimeToLiveHr": 24,
    "ProcessorDelayMs": 2000
  },
  "PCC": {
    "AppName": "touchpoint-medical",
    "AppKey": "oHhpMSEtRmgDoLU7EZwT6GdRXEEVBnkW",
    "AppKeySecret": "KWL3KrngUvAbXlfA ",
    "ClientCertificateDataPath": "/app/App_Data/PointClickCare/gateway.pfx",
    "ClientCertificatePassword": "TBD",
    "WebhookPort": "443",
    "WebhookEventTypeList": [
      //ADT01
      "patient.admit",
      "patient.readmit",
      "patient.cancelAdmit",
      "patient.discharge",
      "patient.cancelDischarge",
      "patient.transfer",
      "patient.cancelTransfer",
      "patient.updateResidentInfo",

      //ADT02
      "patient.leave",
      "patient.returnFromLeave",
      "patient.cancelLeave",
      "patient.cancelReturnFromLeave",

      //ADT03
      "patient.preAdmit",

      //ADT04
      "patient.outpatientToInpatient",
      "patient.inpatientToOutpatient",

      //ALL01
      "allergy.add",
      "allergy.strikeout",

      //ALL02
      "allergy.update",

      //MED01
      "medication.add",
      "medication.discontinue",
      "medication.strikeout",

      //MED02
      "medication.cancelDiscontinue",
      "medication.update"
    ]
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "/app/Logs/app-.json",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "fileSizeLimitBytes": 10485760,
                "retainedFileCountLimit": 7,
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                "formatterArgs": {
                  "renderMessage": true
                }
              }
            }
          ]
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": { "expression": "StartsWith(SourceContext, 'TouchpointMedical.')" }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "/app/Logs/touchpointmedical-.json",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": true,
                  "fileSizeLimitBytes": 10485760,
                  "retainedFileCountLimit": 7,
                  "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
              }
            ]
          }
        }
      }
    ]
  }
}
